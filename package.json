{
    "name": "next-boilerplate",
    "description": "An opinionated boilerplate for NextJS project with minimal setup to get started",
    "version": "0.1.0",
    "author": "lyndon-baylin (https://github.com/lyndon-baylin)",
    "private": true,
    "engines": {
        "node": ">=18.18.0"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/lyndon-baylin/next-boilerplate.git"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:css": "stylelint src/**/*.css",
        "lint:css:fix": "stylelint src/**/*.css --fix",
        "prettify": "prettier --write src",
        "check-types": "tsc --noEmit --pretty",
        "prepare": "husky"
    },
    "dependencies": {
