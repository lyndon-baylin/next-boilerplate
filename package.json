        "next": "15.2.4",
        "next-themes": "0.4.6",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-hook-form": "7.55.0",
        "sonner": "2.0.3",
        "tailwind-merge": "3.2.0",
        "tailwindcss-animate": "1.0.7",
        "usehooks-ts": "3.1.1",
        "zod": "3.24.2",
        "zustand": "5.0.3"
    },
    "devDependencies": {
        "@commitlint/cli": "19.8.0",
